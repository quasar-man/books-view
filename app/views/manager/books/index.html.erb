<div class="content">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Price</th>
        <th>Publisher</td>
        <th>Release Date</th>
        <th>CreatedAt</th>
        <th>UpdatedAt</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <td><%= book.id %></td>
        <td><%= book.name %></td>
        <td><%= book.price %></td>
        <td><%= book.publisher.name %></td>
        <td><%= book.release_date.strftime('%Y/%m/%d') %></td>
        <td><%= book.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= book.updated_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= link_to "Edit", edit_manager_book_path(book), class: "btn btn-success me-md-2" %>
          <%= link_to "Delete", manager_book_path(book), :method => :delete, :class => "btn btn-danger me-md-2" %>
        </td>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="8" class="add-btn-area">
          <%= link_to "Add", new_manager_book_path, :class => "btn btn-primary me-md-2" %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>